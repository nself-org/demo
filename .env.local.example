# =============================================================================
# LOCAL DEVELOPMENT (nSelf containers on localhost)
# =============================================================================
# Copy this file to .env.local and fill in your values.
# This overrides .env for local development.
# =============================================================================

NEXT_PUBLIC_BACKEND_PROVIDER=nself
NEXT_PUBLIC_ENVIRONMENT=local
NEXT_PUBLIC_APP_NAME=My App (Dev)
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_DEBUG=true

# nSelf local containers (default ports from nself CLI)
NEXT_PUBLIC_NSELF_GRAPHQL_URL=http://localhost:8080/v1/graphql
NEXT_PUBLIC_NSELF_GRAPHQL_WS_URL=ws://localhost:8080/v1/graphql
# NOTE: Admin secret is server-only! Never expose as NEXT_PUBLIC_
NEXT_PUBLIC_NSELF_AUTH_URL=http://localhost:4000
NEXT_PUBLIC_NSELF_STORAGE_URL=http://localhost:8484
NEXT_PUBLIC_NSELF_REALTIME_URL=ws://localhost:8080/v1/graphql
NEXT_PUBLIC_NSELF_FUNCTIONS_URL=http://localhost:3010

# Alternative: use local domains via /etc/hosts or Traefik
# NEXT_PUBLIC_NSELF_GRAPHQL_URL=http://api.local.nself.org/v1/graphql
# NEXT_PUBLIC_NSELF_GRAPHQL_WS_URL=ws://api.local.nself.org/v1/graphql
# NEXT_PUBLIC_NSELF_AUTH_URL=http://auth.local.nself.org
# NEXT_PUBLIC_NSELF_STORAGE_URL=http://storage.local.nself.org
# NEXT_PUBLIC_NSELF_REALTIME_URL=ws://api.local.nself.org/v1/graphql
# NEXT_PUBLIC_NSELF_FUNCTIONS_URL=http://functions.local.nself.org
