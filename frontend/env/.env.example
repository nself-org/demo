# =============================================================================
# BACKEND PROVIDER
# =============================================================================
# "bolt"      - Bolt-managed Supabase (default when using Bolt.new)
# "supabase"  - Self-managed Supabase instance
# "nhost"     - Nhost.io managed backend (Hasura + Auth + Storage)
# "nself"     - nSelf self-hosted backend (Hasura + Postgres + Auth + MinIO) [DEFAULT]
NEXT_PUBLIC_BACKEND_PROVIDER=nself

# =============================================================================
# ENVIRONMENT
# =============================================================================
# "local"      - Local dev (services on localhost or *.local.nself.org)
# "staging"    - Staging (everything on staging server, same origin or subdomains)
# "production" - Production (frontend on Vercel/CDN, backend on VPS/AWS via endpoints)
NEXT_PUBLIC_ENVIRONMENT=local

# =============================================================================
# APP SETTINGS
# =============================================================================
NEXT_PUBLIC_APP_NAME=ɳApp
NEXT_PUBLIC_APP_TAGLINE=Your application tagline
NEXT_PUBLIC_APP_DESCRIPTION=A modern web application built with ɳApp
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_VERSION=0.1.0
NEXT_PUBLIC_PLATFORM=web
NEXT_PUBLIC_DEBUG=false

# =============================================================================
# TABLE PREFIX (Monorepo Support)
# =============================================================================
# When using this app in a monorepo with multiple apps sharing one backend,
# set a unique prefix for each app to avoid table name conflicts.
#
# Examples:
#   - App 1 (dashboard):  NEXT_PUBLIC_TABLE_PREFIX=dashboard
#   - App 2 (admin):      NEXT_PUBLIC_TABLE_PREFIX=admin
#   - App 3 (customer):   NEXT_PUBLIC_TABLE_PREFIX=customer
#
# Default: "app" (safe for single-app deployments)
# The prefix will be used for all database tables: {prefix}_todos, {prefix}_profiles, etc.
NEXT_PUBLIC_TABLE_PREFIX=app

# =============================================================================
# BOLT / SUPABASE CONFIGURATION
# =============================================================================
# Used when NEXT_PUBLIC_BACKEND_PROVIDER is "bolt" or "supabase"
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# =============================================================================
# NHOST CONFIGURATION
# =============================================================================
# Used when NEXT_PUBLIC_BACKEND_PROVIDER is "nhost"
# Nhost cloud provides these automatically; fill in from your Nhost dashboard.
NEXT_PUBLIC_NHOST_SUBDOMAIN=your-subdomain
NEXT_PUBLIC_NHOST_REGION=us-east-1
NEXT_PUBLIC_NHOST_BACKEND_URL=https://your-subdomain.nhost.run
NEXT_PUBLIC_NHOST_GRAPHQL_URL=https://your-subdomain.hasura.nhost.run/v1/graphql
NEXT_PUBLIC_NHOST_GRAPHQL_WS_URL=wss://your-subdomain.hasura.nhost.run/v1/graphql
NEXT_PUBLIC_NHOST_AUTH_URL=https://your-subdomain.auth.nhost.run/v1
NEXT_PUBLIC_NHOST_STORAGE_URL=https://your-subdomain.storage.nhost.run/v1
NEXT_PUBLIC_NHOST_FUNCTIONS_URL=https://your-subdomain.functions.nhost.run/v1
# Admin secret is server-only — do NOT prefix with NEXT_PUBLIC_
# NHOST_ADMIN_SECRET=

# =============================================================================
# NSELF CONFIGURATION
# =============================================================================
# Used when NEXT_PUBLIC_BACKEND_PROVIDER is "nself"
#
# URL patterns differ by environment:
#
# --- LOCAL DEV (containers on localhost or local domains) ---
#   NEXT_PUBLIC_NSELF_GRAPHQL_URL=http://localhost:8080/v1/graphql
#   NEXT_PUBLIC_NSELF_GRAPHQL_WS_URL=ws://localhost:8080/v1/graphql
#   NEXT_PUBLIC_NSELF_AUTH_URL=http://localhost:4000
#   NEXT_PUBLIC_NSELF_STORAGE_URL=http://localhost:8484
#   NEXT_PUBLIC_NSELF_REALTIME_URL=ws://localhost:8080/v1/graphql
#   NEXT_PUBLIC_NSELF_FUNCTIONS_URL=http://localhost:3010
#
#   Or with local domains (via /etc/hosts or Traefik):
#   NEXT_PUBLIC_NSELF_GRAPHQL_URL=http://api.local.nself.org/v1/graphql
#   NEXT_PUBLIC_NSELF_AUTH_URL=http://auth.local.nself.org
#   NEXT_PUBLIC_NSELF_STORAGE_URL=http://storage.local.nself.org
#
# --- STAGING (frontend + backend same machine) ---
#   NEXT_PUBLIC_NSELF_GRAPHQL_URL=https://api.staging.mydomain.com/v1/graphql
#   NEXT_PUBLIC_NSELF_GRAPHQL_WS_URL=wss://api.staging.mydomain.com/v1/graphql
#   NEXT_PUBLIC_NSELF_AUTH_URL=https://auth.staging.mydomain.com
#   NEXT_PUBLIC_NSELF_STORAGE_URL=https://storage.staging.mydomain.com
#   NEXT_PUBLIC_NSELF_REALTIME_URL=wss://api.staging.mydomain.com/v1/graphql
#   NEXT_PUBLIC_NSELF_FUNCTIONS_URL=https://functions.staging.mydomain.com
#
# --- PRODUCTION (frontend Vercel, backend VPS/AWS) ---
#   NEXT_PUBLIC_NSELF_GRAPHQL_URL=https://api.mydomain.com/v1/graphql
#   NEXT_PUBLIC_NSELF_GRAPHQL_WS_URL=wss://api.mydomain.com/v1/graphql
#   NEXT_PUBLIC_NSELF_AUTH_URL=https://auth.mydomain.com
#   NEXT_PUBLIC_NSELF_STORAGE_URL=https://storage.mydomain.com
#   NEXT_PUBLIC_NSELF_REALTIME_URL=wss://api.mydomain.com/v1/graphql
#   NEXT_PUBLIC_NSELF_FUNCTIONS_URL=https://functions.mydomain.com
#
NEXT_PUBLIC_NSELF_GRAPHQL_URL=http://localhost:8080/v1/graphql
NEXT_PUBLIC_NSELF_GRAPHQL_WS_URL=ws://localhost:8080/v1/graphql
# Admin secret is server-only — do NOT prefix with NEXT_PUBLIC_
# NSELF_HASURA_ADMIN_SECRET=
NEXT_PUBLIC_NSELF_AUTH_URL=http://localhost:4000
NEXT_PUBLIC_NSELF_STORAGE_URL=http://localhost:8484
NEXT_PUBLIC_NSELF_REALTIME_URL=ws://localhost:8080/v1/graphql
NEXT_PUBLIC_NSELF_FUNCTIONS_URL=http://localhost:3010
